<h3>Edit your books information below</h3>
<br>
<form action="/books" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title" placeholder="Title" value= "<%= @book.title %>">
    <br>
    <br>
    <label for="author">Author: </label>
    <input type="text" name="author" placeholder="Author" value= "<%= @book.author %>">
    <br>
    <br>
    <label for="genre">Genre: </label>
    <input type="text" name="genre" placeholder="Genre" value= "<%= @book.genre %>">
    <br>
    <br>
    <label for="year">Publishing Year (e.g. 1991): </label>
    <input type="text" name="year" placeholder="Publishing Year" value= "<%= @book.year %>">
    <br>
    <br>
    <label for="condition">Condition (e.g. New/Used): </label>
    <input type="text" name="condition" placeholder="Condition" value= "<%= @book.condition %>">
    <br>
    <br>
    <label for="book_type">Type (e.g. Hardcover/Paperback): </label>
    <input type="text" name="book_type" placeholder="Type" value= "<%= @book.book_type %>">
    <br>
    <br>
    <input type="submit" value="Edit Book"> 
</form>